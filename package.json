{
  "name": "influon-backend",
  "version": "0.0.1",
  "description": "Influon AI Backend Service",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "// --- 빌드 및 포맷팅 ---": "",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "// --- 로컬 Docker 관리 (DB/Redis) ---": "",
    "docker:up": "docker-compose --env-file .env.local up -d --wait",
    "docker:down": "docker-compose --env-file .env.local down",
    "docker:restart": "docker-compose --env-file .env.local down && docker-compose --env-file .env.local up -d --wait",
    "docker:start": "docker-compose --env-file .env.local up -d --wait",
    "// --- 애플리케이션 실행 ---": "",
    "start": "nest start",
    "start:api:local": "cross-env NODE_ENV=local npm run docker:start && cross-env NODE_ENV=local nest start --watch",
    "start:api:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:api:debug": "cross-env NODE_ENV=local nest start --debug --watch",
    "start:api:prod": "cross-env NODE_ENV=production node dist/main",
    "// --- 데이터베이스 초기화 (Seeding Local) ---": "",
    "seed:local": "cross-env NODE_ENV=local ts-node -r tsconfig-paths/register src/seed.ts",
    "// --- 데이터베이스 초기화 (Seeding Develop) ---": "",
    "seed:dev": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/seed.ts",
    "// --- 데이터베이스 초기화 (Seeding Production) ---": "",
    "seed:prod": "cross-env NODE_ENV=production node dist/seed.js",
    "// --- 린트 및 테스트 ---": "",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "// --- TypeORM 마이그레이션 ---": "",
    "typeorm": "cross-env NODE_ENV=local ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/typeorm.config.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/typeorm.config.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/typeorm.config.ts"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.1.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/typeorm": "^10.0.2",
    "bcrypt": "^6.0.0",
    "cache-manager": "^7.2.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cross-env": "^7.0.3",
    "joi": "^17.12.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
